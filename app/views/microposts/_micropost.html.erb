<li>
    <span class="content">
        <%= micropost.content %>
    </span>
    <span class="timestamp">
        Posted <%= time_ago_in_words(micropost.created_at) %>
    </span>
    <% if current_user?(micropost.user) %>
        <%= render 'shared/micropost_delete', deleting_post:micropost, message_text:"from user page" %>
    <% end %>
</li>